<Window x:Class="WpfAbstractCafe.KitchenLoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAbstractCafe"
        mc:Ignorable="d"
        Title="Загруженность кухни" Height="343.856" Width="684.379">
    <Grid Margin="0,0,2,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="96*"/>
            <ColumnDefinition Width="241*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="buttonSaveToExcel" Content="Сохранить в Excel" HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" VerticalAlignment="Top" Width="118" Click="buttonSaveToExcel_Click"/>
        <DataGrid x:Name="dataGridView" HorizontalAlignment="Left" Height="276" Margin="0,35,0,0" VerticalAlignment="Top" Width="674" Grid.ColumnSpan="2"  Loaded="KitchenLoadWindow_Load">
            <DataGrid.Columns>

                <DataGridTextColumn x:Name="ColumnKitchens" Header="Кухня" Width="*" Binding="{Binding [0]}"/>
                <DataGridTextColumn x:Name="ColumnDish" Header="Блюдо" Width="*" Binding="{Binding [1]}"/>
                <DataGridTextColumn  x:Name="ColumnCount" Header="Количество" Binding="{Binding [2]}"/>

            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Window>
